---
import Section from "../section.astro";
import StackLang from "./stack_lang.astro";
import IconStack from "./Stacks";
---

<Section name="Skills" icon="bi bi-terminal-fill" id="stack">
    {
        IconStack.map((item) => (
            <div>
                <h3 class="text-xl">{item.name}</h3>
                <ul class="grid grid-cols-2 md:grid-cols-5 gap-3">
                    {item.stack.map((stack_item) => (
                        <li class="mb-6">
                            {!stack_item.customIcon ? (
                                <StackLang
                                    name={stack_item.name}
                                    icon={stack_item.icon}
                                />
                            ) : (
                                <StackLang name={stack_item.name}>
                                    <i class={stack_item.icon + " text-5xl"} />
                                </StackLang>
                            )}
                        </li>
                    ))}
                </ul>
            </div>
        ))
    }
</Section>
